{
    "name": "webgriffe/sylius-clerk-plugin",
    "type": "sylius-plugin",
    "description": "Clerk.io plugin for Sylius.",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "clerk"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "sylius/sylius": "^2.0",
        "symfony/lock": "^6.4 || ^7.4",
        "symfony/serializer": "^6.4 || ^7.4"
    },
    "require-dev": {
        "behat/behat": "^3.29",
        "behat/mink": "^1.13",
        "dbrekelmans/bdi": "^1.4.1",
        "dmore/behat-chrome-extension": "^1.4.1",
        "dmore/chrome-mink-driver": "^2.10",
        "friends-of-behat/mink-browserkit-driver": "^1.6.2",
        "friends-of-behat/mink-debug-extension": "^2.1",
        "friends-of-behat/mink-extension": "^2.7.5",
        "friends-of-behat/page-object-extension": "^0.3.2",
        "friends-of-behat/suite-settings-extension": "^1.1",
        "friends-of-behat/symfony-extension": "^2.6.2",
        "friends-of-behat/variadic-extension": "^1.6",
        "phpspec/phpspec": "^7.6",
        "nyholm/psr7": "^1.8.2",
        "phpstan/phpstan": "^1.12.32",
        "phpstan/phpstan-doctrine": "^1.5.7",
        "phpstan/phpstan-webmozart-assert": "^1.2.11",
        "phpunit/phpunit": "^10.5.63",
        "robertfausk/behat-panther-extension": "^1.2",
        "sylius-labs/coding-standard": "^4.5",
        "sylius-labs/suite-tags-extension": "~0.2",
        "sylius/sylius-rector": "^2.0",
        "sylius/test-application": "^2.0.0@alpha",
        "symfony/browser-kit": "^7.4.4",
        "symfony/debug-bundle": "^7.4",
        "symfony/dotenv": "^7.4",
        "symfony/http-client": "^7.4.5",
        "symfony/intl": "^7.4.4",
        "symfony/runtime": "^7.4.1",
        "symfony/web-profiler-bundle": "^7.4.4",
        "symfony/webpack-encore-bundle": "^2.4",
        "vimeo/psalm": "^6.15.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "php-http/discovery": false,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": false
        }
    },
    "extra": {
        "symfony": {
            "require": "^7.4"
        },
        "public-dir": "vendor/sylius/test-application/public"
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\SyliusClerkPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Webgriffe\\SyliusClerkPlugin\\": ["tests/", "tests/TestApplication/src/"]
        }
    },
    "scripts": {
        "database-reset": [
            "vendor/bin/console doctrine:database:drop --force --if-exists",
            "vendor/bin/console doctrine:database:create",
            "vendor/bin/console doctrine:migration:migrate -n",
            "vendor/bin/console sylius:fixtures:load -n"
        ],
        "frontend-clear": [
            "cd vendor/sylius/test-application && yarn install && yarn build",
            "vendor/bin/console assets:install"
        ],
        "test-app-init": [
            "@database-reset",
            "@frontend-clear"
        ],
        "ecs": "vendor/bin/ecs check",
        "phpstan": "vendor/bin/phpstan analyse",
        "psalm": "vendor/bin/psalm",
        "phpspec": "vendor/bin/phpspec run --ansi -f progress --no-interaction",
        "unit": "vendor/bin/phpunit --colors=always",
        "behat": "vendor/bin/behat --colors --strict -vvv --no-interaction || vendor/bin/behat --colors --strict -vvv --no-interaction --rerun",
        "tests": [
            "composer validate --ansi --strict",
            "@ecs",
            "@phpstan",
            "@psalm",
            "@phpspec",
            "@unit",
            "@behat"
        ]
    }
}
